import java.io.File

val files = new File(args(0)) :: Nil
def found(files: List[File]): Stream[String] = {
  if (files.isEmpty) {
    Stream.Empty
  } else {
    val file = files.head
    if (file.isDirectory()) {
      found(file.listFiles().toList ::: files.tail)
    } else {
      file.getAbsolutePath #:: found(files.tail)
    }
  }
}
_ => found(files)
